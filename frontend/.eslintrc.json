{
  "extends": [
    "next/core-web-vitals",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "unused-imports"],
  "rules": {
    // Check for unused variables
    "@typescript-eslint/no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_" 
    }],
    
    // Check for undefined variables (catches router not defined issues)
    "no-undef": "error",
    
    // Require variables to be defined before use
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    
    // Check React hooks dependencies
    "react-hooks/exhaustive-deps": "warn",
    
    // Ensure import statements are correct
    "import/no-unresolved": "off",
    
    // Check function return types
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    
    // Check console statements (warn in production)
    "no-console": ["warn", { 
      "allow": ["warn", "error"] 
    }],
    
    // Check for duplicate imports
    "import/no-duplicates": "error",
    
    // Check for unused imports
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-undef": "off" // TypeScript handles this
      }
    }
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  }
}
